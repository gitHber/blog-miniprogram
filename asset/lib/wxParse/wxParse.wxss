.wxParse {
  margin: 0 5px;
  font-family: Helvetica, sans-serif;
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

view {
  word-break: break-all;
  overflow: auto;
}

.wxParse-inline {
  display: inline;
  margin: 0;
  padding: 0;
}

/*//标题 */

.wxParse-div {
  margin: 0;
  padding: 0;
}

.wxParse-h1 {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 0.9em;
}

.wxParse-h2 {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 0.34em;
  border-bottom: 1px solid #eee;
}

.wxParse-h3 {
  font-weight: 400;
  font-size: 21px;
  margin-bottom: 0.34em;
}

.wxParse-h4 {
  font-weight: 400;
  font-size: 18px;
  margin-bottom: 0.24em;
}

.wxParse-h5 {
  font-weight: 400;
  font-size: 14px;
  margin-bottom: 0.14em;
}

.wxParse-h6 {
  font-weight: 500;
  font-size: 14px;
  margin-bottom: 0.04em;
}
.wxParse-p{
  font-size: 12px;
}
.wxParse-p, .wxParse-pre{
  margin-bottom: 15px;
}
.wxParse-mark {
  font-size: 28px;
  display: inline;
  font-weight: 600;
  background: #fcf8e3;
}

.wxParse-b, .wxParse-strong {
  font-weight: bolder;
}

.wxParse-i, .wxParse-cite, .wxParse-em, .wxParse-var, .wxParse-address {
  font-style: italic;
  font-weight: 600;
}

.wxParse-pre, .wxParse-tt, .wxParse-code, .wxParse-kbd, .wxParse-samp {
  font-family: monospace;
}

.wxParse-pre {
    background: #dadae2;
    background-size: 36px,24px;
    border-radius: 0;
    border: none;
    font-size: 13px;
    line-height: 1.7;
    overflow: auto;
    padding: 6px 12px;
    font-family: Consolas,Monaco,'Andale Mono','Ubuntu Mono',monospace;
    white-space: pre;
    word-spacing: normal;
    word-break: normal;
    word-wrap: normal;
}
.wxParse-pre .wxParse-wxxxcode-style .wxParse-inline {
  white-space: normal;
}

.wxParse-big {
  font-size: 1.17em;
}

.wxParse-small, .wxParse-sub, .wxParse-sup {
  font-size: 0.83em;
}

.wxParse-sub {
  vertical-align: sub;
}

.wxParse-sup {
  vertical-align: super;
}

.wxParse-s, .wxParse-strike, .wxParse-del {
  text-decoration: line-through;
}

/*wxparse-自定义个性化的css样式*/

/*增加video的css样式*/

.wxParse-strong, .wxParse-s {
  display: inline;
}

.wxParse-a {
  color: #4183c4;
  font-size: 12px;
  word-break: break-all;
  overflow: auto;
}

.wxParse-video {
  text-align: center;
  margin: 10px 0;
}

.wxParse-video-video {
  width: 100%;
}

.wxParse-img {
  /*background-color: #efefef;*/
  overflow: hidden;
}

.wxParse-blockquote {
  margin: 0 0 15px;
  padding: 10px 15px;
  background: #f5f5f5;
  color: #818181;
  border-left: 4px solid #179bb2;
  font-style: italic;
  font-size: 13px;
}
.wxParse-blockquote .wxParse-p {
  margin-bottom: 0;
}

.wxParse-code, .wxParse-wxxxcode-style {
  display: inline-block;
  color: #c7254e;
  padding: 2px 4px;
  background-color: #f9f2f4;
  border-radius: 4px;
}
.wxParse-pre .wxParse-wxxxcode-style{
  display: block;
  color: #0f0ff3;
  white-space: pre;
  border: none;
  background: none;
}

.wxParse-ul {
  margin: 20rpx 10rpx;
}

.wxParse-li, .wxParse-li-inner {
  display: flex;
  align-items: center;
  margin: 0px 10px 10px;
}

.wxParse-li-text {
  font-size: 12px;
  display: flex;
  height: 100%;
  align-items: center;
  color: #333;
}

.wxParse-li-circle {
  display: inline-flex;
  width: 5px;
  height: 5px;
  border-radius: 50%;
  background-color: #333;
  margin-right: 8px;
}

.wxParse-li-square {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  background-color: #333;
  margin-right: 5px;
}

.wxParse-li-ring {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid #333;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 5px;
}

