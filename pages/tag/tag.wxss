.tag-header {
  height: 350rpx;
  width: 100%;
  position: relative;
  color: #fff;
  padding-left: 20rpx;
}

.tag-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: blur(10rpx);
}

.tag-name {
  font-size: 80rpx;
  font-weight: bold;
  padding-top: 80rpx;
  text-shadow:0 0 4px #000;
}
.tag-description {
  font-size: 30rpx;
  margin: 10rpx 10rpx 0;
  text-shadow:0 0 4px #000;
}
.post-total{
  font-size: 25rpx;
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  display: flex;
  align-items: center;
  text-shadow:0 0 4px #000;
}
.post-total icon{
  margin-right: 10rpx;
}