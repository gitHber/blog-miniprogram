.tag-header {
  height: 350rpx;
  width: 100%;
  position: relative;
  color: #e2e21a;
  padding-left: 20rpx;
}

.tag-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: blur(10rpx);
}

.tag-name {
  font-size: 50rpx;
  font-weight: bold;
  padding: 80rpx 0 0 30rpx;
}
.tag-description {
  font-size: 30rpx;
  padding: 30rpx 0 0 30rpx;
}
.post-total{
  font-size: 25rpx;
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
  display: flex;
  align-items: center;
}
.post-total icon{
  margin-right: 10rpx;
}