.authors{
  color: #fff;
}
.author-wrap{
  position: relative;
  width: 90%;
  margin: 40rpx 0 0 5%;
  height: 300rpx;
  text-align: center;
  display: inline-block;
  padding: 40rpx 0 0;
  border-radius: 10rpx;
}
.author-cover-img{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(10rpx);
  z-index: -1;
}
.author-info{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.author-info-top{
  display: flex;
  width: calc(100% - 80rpx);
  align-items: center;
  margin: 40rpx 0 0 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #fff;
}
.author-img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 6px hsla(0,0%,100%,.1);
}
.author-info-top-info{
  text-align: left;
  margin: 40rpx;
}
.author-name{
  font-size: 40rpx;
}
.author-email{
  margin-top: 20rpx;
  font-size: 25rpx;
  display: flex;
  align-items: center;
}
.author-email icon{
  margin-right: 10rpx;
}
.author-description{
  margin-top: 20rpx;
  margin-left: 40rpx;
  font-size: 30rpx;
}